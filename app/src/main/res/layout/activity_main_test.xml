<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="API Test Client"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:paddingBottom="16dp" />

    <!-- Domain Input -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="API Domain:"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etDomain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="https://api.example.com"
        android:inputType="textUri"
        android:text="http://10.26.130.32:5001" />

    <!-- API Method Selection -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="API Method:"
        android:textStyle="bold"
        android:paddingTop="16dp" />

    <Spinner
        android:id="@+id/spinnerMethod"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp" />

    <!-- File Selection -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="16dp"
        android:gravity="center_vertical">

        <Button
            android:id="@+id/btnSelectFile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Photo"
            style="?android:attr/buttonStyleSmall" />

        <TextView
            android:id="@+id/tvSelectedFile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="No file selected"
            android:textSize="12sp"
            android:ellipsize="middle"
            android:singleLine="true" />

        <Button
            android:id="@+id/btnClearFile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="âœ•"
            android:textSize="16sp"
            android:visibility="gone"
            style="?android:attr/buttonStyleSmall" />
    </LinearLayout>

    <!-- Scrollable Input Fields -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingTop="16dp">

        <LinearLayout
            android:id="@+id/layoutInputFields"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Dynamic fields will be added here -->

        </LinearLayout>
    </ScrollView>

    <!-- Execute Button -->
    <Button
        android:id="@+id/btnExecute"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Execute Request"
        android:layout_marginTop="16dp" />

    <!-- Result Display -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Result:"
        android:textStyle="bold"
        android:paddingTop="16dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="#F0F0F0"
        android:padding="8dp">

        <TextView
            android:id="@+id/tvResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No result yet"
            android:textSize="12sp"
            android:fontFamily="monospace" />
    </ScrollView>

</LinearLayout>
